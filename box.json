{
    "chmod": "0755",
    "directories": ["src"],
    "files": [
        "bin/php-project.php",
        "jenkins/config.xml",
        "LICENSE",
        "template/.editorconfig",
        "template/.gitignore",
        "template/.scrutinizer.yml",
        "template/.travis.yml",
        "template/LICENSE",
        "template/README.md",
        "template/build.xml",
        "template/composer.json",
        "template/phpmd.xml",
        "template/phpunit.xml",
        "template/src/DummyClass.php",
        "template/test/bootstrap.php",
        "template/test/DummyTest.php",
        "vendor/cpliakas/git-wrapper/bin/git-ssh-wrapper.sh",
        "vendor/guzzle/guzzle/src/Guzzle/Http/Resources/cacert.pem",
        "vendor/herrera-io/phar-update/res/schema.json"
    ],
    "finder": [
        {
            "name": "*.php",
            "exclude": [
                "phing",
                "test",
                "tests",
                "Test",
                "Tests",
                "Tester"
            ],
            "in": "vendor"
        }
    ],
    "git-version": "package_version",
    "main": "bin/php-project",
    "output": "build/php-project.phar",
    "stub": true
}
